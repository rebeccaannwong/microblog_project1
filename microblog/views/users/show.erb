<div id="user">
<h1><%= @user.name %></h1>
<p><img src="<%= @user.avatar %>" width=400 ></p>
<p><%= @user.date_joined %></p>
<p><%= @user.location %></p>
<p><%= @user.bio %></p>

<a href="/users/<%= @user.id %>/edit">EDIT</a><p>

<% @user.posts.each do |post| %>
		<h2><%= post.title %></h2>
		<h4><%= post.user.name %></h4>
		<a href="/posts/<%= post.id %>">VIEW POST</a>
</div>
<% end %>